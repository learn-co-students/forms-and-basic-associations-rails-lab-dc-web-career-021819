<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist %>
  <%= f.text_field :artist, id: "song_artist_name" %>
  <br>
  <%= f.label :genre %>
  <%= f.collection_select(:genre_id, Genre.all, :name, :name) %>
  <br>
  <h2>Notes</h2>
  <%# i = 1 %>
  <%# 2.times do %>
    <%#= f.fields_for :notes do |note| %>
      <%#= note.label :content %>
      <%#= note.text_area :content, id: "song_notes_#{i}" %>
    <%# end %>

    <%# i += 1 %>
  <%# end %>
  <input type="text" name="song[note_contents][]" id="song_notes_1">
  <input type="text" name="song[note_contents][]" id="song_notes_2">

  <%= f.submit "commit" %>
<% end %>
